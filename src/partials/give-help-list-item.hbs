<li class="requests-listing__item" data-id="\{{id}}">
  <a class="requests-listing__link" href="\{{detailsUrl}}">
    <article>
      <p class="h3 requests-listing__type">
        <svg class="svg-logo-dims requests-listing__icon">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/assets/svgsprite.svg#\{{{type}}}-alt"></use>
        </svg>
        <span class="type">\{{type}}</span>
      </p>
      \{{#donationAmountInPounds}}<p class="requests-listing__amount">Â£\{{{donationAmountInPounds}}}</p>\{{/donationAmountInPounds}}
      <div class="requests-listing__info">
        <h3 class="requests-listing__description description">\{{{description}}}</h3>
        <p class="requests-listing__date formattedCreationDate">Posted: <time datetime={{{formattedCreationDate}}}>\{{{formattedCreationDate}}}</time></p>
        <p class="hide-screen creationDate">\{{creationDate}}</p>
        <p class="hide-screen distanceAwayInMetres">\{{distanceAwayInMetres}}</p>
        <p class="hide-screen keywords">\{{keywords}}</p>
      </div>
      <div class="requests-listing__secondary-info">
        <p class="requests-listing__provider serviceProviderName">\{{{serviceProviderName}}}</p>
        <p class="requests-listing__location-description locationDescription">\{{{locationDescription}}}</p>
        <button class="btn btn--brand-e">
          <span class="btn__text">I Can Help!</span>
        </button>
    </article>
  </a>
</li>